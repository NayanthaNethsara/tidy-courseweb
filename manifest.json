{
  "name": "TidyCourseweb",
  "description": "Declutter your Courseweb by hiding old modules and focusing on your current courses.",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://courseweb.sliit.lk/*"],
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://courseweb.sliit.lk/*"],
      "js": ["scripts/content.js"],
      "css": ["styles/darkmode.css"]
    }
  ],
  "action": {
    "default_title": "TidyCourseweb",
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon32.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tidycourseweb@nayantha.me",
      "strict_min_version": "115.0"
    }
  }
}
